<%- include('../_layouts/adminheader') %> 

<h2 class="page-title">Add a product</h2>
<a href="/admin/products" class="btn btn-primary">Back to all products</a>
<br><br>

<form method="POST" action="/admin/products/add-product" enctype="multipart/form-data">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" placeholder="Title" name="title" id="title" value="<%= title %>" >
    </div>

    <div class="form-group">
        <label for="">Description</label>
        <textarea class="form-control" name="desc" placeholder="Description" id="ta" cols="30" rows="10">
            <%= desc %> 
        </textarea>
    </div>

    <div class="form-group">
        <label for="">Category</label>
        <select name="category" class="form-control">
            <% categories.forEach((cat) => { %>
                <option value="<%= cat.slug %> "><%= cat.title %> </option>
            <% }) %> 
        </select>
    </div>
    
    <div class="form-group">
        <label for="price">Price</label>
        <input type="text" class="form-control" placeholder="Price" name="price" id="price" value="<%= price %>" >
    </div>

    <div class="form-group">
        <label for="img">Image</label>
        <input type="file" class="form-control" placeholder="Price" name="image" id="img">
        <img src="#" id="imgPreview" alt="">
    </div>

    <button class="btn btn-default" type="submit">Submit</button>
</form>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function(e) {
                $('#imgPreview').attr('src', e.target.result).width(100).height(100);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    $('#img').change(function() {
        readURL(this);
    })

</script>

<%- include('../_layouts/adminfooter') %> 