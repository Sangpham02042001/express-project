<%- include('../_layouts/adminheader') %> 

<h2 class="page-title">Edit page</h2>
<a href="/admin/pages" class="btn btn-primary">Back to all pages</a>
<br><br>

<form method="POST" action="/admin/pages/edit-page/<%= id %> ">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="from-control" placeholder="Title" name="title" id="title" value="<%= title %>" >
    </div>
    <div class="form-group">
        <label for="slug">Slug</label>
        <input type="text" class="from-control" placeholder="Slug" name="slug" id="slug" value="<%= slug %>" >
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea class="form-control" id="ta" name="content" placeholder="Describe yourself here..." id="content" cols="30" rows="10">
            <%= content %> 
        </textarea>
    </div>

    <button class="btn btn-default" type="submit">Submit</button>
</form>

<%- include('../_layouts/adminfooter') %> 